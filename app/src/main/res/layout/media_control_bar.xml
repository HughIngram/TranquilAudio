<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary">
    <ImageButton
        android:id="@+id/media_control_button"
        android:layout_width="@dimen/media_control_button_size"
        android:layout_height="@dimen/media_control_button_size"
        android:background="@drawable/ic_play_arrow_black_24dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/media_control_button_margin"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/media_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/media_control_button"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/media_control_bar_text_size"
        android:textColor="@color/colorTextPrimary"/>
</RelativeLayout>